@import './bootstrap.min.css'

.stepper-wrapper {
    min-width: 400px;
    display: flex;
    flex-wrap: wrap;
  max-width: 900px;
  width: 100%;
}

.stepper-wrapper .stepper_view  {
    display: flex;
    flex-wrap: wrap;
    min-height: 250px;
    width: 100%;
}
.stepper-wrapper .stepper_view .stepper_step
  padding: 10px;
  border: 1px solid;
  width: 100%;
  display: none;
  .stepper_title
    width: 100%;
    text-align: center;
    font-size: 2.2em;
    font-weight: 400;
  &.active_step
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;


.stepper_control {
  width: 100%;
  border: 1px solid green;
  padding: 10px;
  display: flex;
  justify-content: space-between;
}
.stepper_control .stapper_control_btn {
  border: none;
  padding: 7.5px 15px;
  border-radius: 3px;
  background-color: green;
  color: #ffffff;
  cursor: pointer;
}
.stepper_control .stapper_control_btn:disabled {
    cursor: not-allowed;
    color: white;
    background-color: grey;
  }
.stepper_control .stepper_control_current-step {
  font-size: 20px;
}
.stepper_result {
  display: flex;
  width: 100%;
  flex-direction: column;
  border: 1px solid blue;
}
.stepper_result .stepper_result_item {
  display: flex;
  justify-content: center;
  padding: 5px 10;
  margin: 5px 0;
  border: 1px solid red;
  min-height: 50px;
  justify-content: flex-start;
  align-items: center;
}
.stepper_result_title {
  font-size: 1.5rem;
  font-weight: 300;
  line-height: 1.2;
}

.circleCount {
    margin-right: 10px;
}